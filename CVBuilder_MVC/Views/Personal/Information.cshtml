    //     $('#LastName').val(FirstName);
    //    //alert(FirstName + ' '+LastName);
    //});
    function Show() {
        var FirstName = parseInt($('#FirstName').val());
        var LastName = parseInt($('#LastName').val());
        $('#FatherName').val(FirstName + LastName);

    }


</script>